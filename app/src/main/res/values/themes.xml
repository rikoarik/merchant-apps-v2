<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SolusiNegeriMerchant" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status Bar Configuration -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.SolusiNegeriMerchant" parent="Base.Theme.SolusiNegeriMerchant" />

    <!-- Splash Screen Theme -->
    <style name="Theme.SolusiNegeriMerchant.Splash" parent="Theme.SolusiNegeriMerchant">
        <item name="android:windowBackground">@drawable/bg_splash_gradient</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- Splash Status Bar Configuration -->
        <item name="android:statusBarColor">@color/colorPrimaryGreen</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/colorPrimaryGreen</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Bottom Navigation Active Indicator Style -->
    <style name="BottomNavActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_light</item>
        <item name="android:width">56dp</item>
        <item name="android:height">28dp</item>
        <item name="shapeAppearance">@style/BottomNavActiveIndicatorShape</item>
    </style>

    <style name="BottomNavActiveIndicatorShape" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">14dp</item>
    </style>

    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavTextActive" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/colorPrimaryGreen</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- FAB Shape Appearance untuk bentuk bulat sempurna -->
    <style name="FabShapeAppearance" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">50%</item>
    </style>
</resources>