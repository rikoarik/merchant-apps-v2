<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/white">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:id="@+id/sv_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp">

                <!-- Modern Header Banner -->
                <ImageView
                    android:id="@+id/iv_banner"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_200sdp"
                    android:background="@color/colorPrimaryGreen_dynamic"
                    android:scaleType="center"
                    android:src="@drawable/bg_pola"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Modern Glass Header Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="100dp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardBackgroundColor="@android:color/transparent">

                    <!-- Glass Effect Background -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_56sdp"
                        android:orientation="horizontal"

                        android:background="@drawable/bg_glass_blur"
                        android:gravity="center_vertical">

                        <!-- Left side -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:src="@drawable/ic_closepay_logo"
                                android:contentDescription="Closepay" />
                        </LinearLayout>

                        <!-- Right side -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/btn_notification"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:padding="@dimen/small_margin_8"
                                android:src="@drawable/ic_notification"
                                android:contentDescription="Notifications" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Modern Balance Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_total_income_and_transaction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/medium_margin_twenty_four"
                    android:layout_marginEnd="@dimen/medium_margin_twenty_four"
                    app:cardCornerRadius="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/header">

                    <LinearLayout
                        android:id="@+id/ly_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#5BFFFFFF"
                        android:orientation="vertical"
                        android:padding="@dimen/medium_margin_twenty_four">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/small_margin_16"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_saldo"
                                android:textColor="@color/text_secondary_dynamic"
                                android:textSize="@dimen/text_size_medium" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/medium_margin_twenty_four"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/placeholder_balance"
                                android:textColor="@color/text_primary_dynamic"
                                android:textSize="@dimen/_28sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/iv_toggle_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/small_margin_12"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="8dp"
                                android:text="Hide"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Modern Action Buttons -->
                        <LinearLayout
                            android:id="@+id/ll_parent_card_income"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/top_up_member"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_48sdp"
                                android:layout_marginEnd="@dimen/small_margin_8"
                                android:layout_weight="1"
                                android:background="@drawable/btn_green_primary"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_16sdp"
                                tools:ignore="RtlSymmetry">

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_marginEnd="@dimen/small_margin_8"
                                    android:src="@drawable/ic_button_top_up" />

                                <TextView
                                    android:id="@+id/tv_topup"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_isi_saldo"
                                    android:textColor="@color/white_dynamic"
                                    android:textSize="@dimen/text_size_medium"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/withdraw"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_48sdp"
                                android:layout_marginStart="@dimen/small_margin_8"
                                android:layout_weight="1"
                                android:background="@drawable/btn_green_primary"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_16sdp"
                                tools:ignore="RtlSymmetry">

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_marginEnd="@dimen/small_margin_8"
                                    android:src="@drawable/ic_button_withdraw" />

                                <TextView
                                    android:id="@+id/tv_wd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_tarik_saldo"
                                    android:textColor="@color/white_dynamic"
                                    android:textSize="@dimen/text_size_medium"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Modern Features Section -->
                <LinearLayout
                    android:id="@+id/linear_layout_menu_dynamic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin_twenty_four"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/card_view_total_income_and_transaction"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/medium_margin_twenty_four"
                        android:layout_marginBottom="@dimen/small_margin_12"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_menu_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_fitur_utama"
                                android:textSize="@dimen/text_size_xlarge"
                                android:textColor="@color/text_primary_dynamic"
                                android:fontFamily="@font/poppins_bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/medium_margin_twenty_four"
                        android:layout_marginBottom="@dimen/small_margin_16"
                        android:text="@string/label_fitur_desc"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_secondary_dynamic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/medium_margin_twenty_four"
                        android:layout_marginBottom="@dimen/_32sdp"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_list_menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="2"
                            android:nestedScrollingEnabled="false" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>