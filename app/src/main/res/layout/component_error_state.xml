<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Error Icon -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_error"
        android:background="@drawable/bg_icon_error"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Error Icon" />

    <!-- Error Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oops! Terjadi Kesalahan"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <!-- Error Message -->
    <TextView
        android:id="@+id/tvErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terjadi kesalahan yang tidak diketahui. Silakan coba lagi."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Retry Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRetry"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coba Lagi"
            android:textSize="14sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:minHeight="44dp"
            app:cornerRadius="22dp"
            app:icon="@drawable/ic_refresh"
            app:iconSize="18dp"
            app:iconPadding="8dp" />

        <!-- Contact Support Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContactSupport"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Hubungi Support"
            android:textSize="14sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:minHeight="44dp"
            app:cornerRadius="22dp"
            app:icon="@drawable/ic_support"
            app:iconSize="18dp"
            app:iconPadding="8dp" />

    </LinearLayout>

    <!-- Debug Info (Only shown in debug builds) -->
    <TextView
        android:id="@+id/tvDebugInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debug Info"
        android:textSize="10sp"
        android:textColor="@color/text_hint"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/bg_debug_info"
        android:padding="8dp" />

</LinearLayout>
