<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.menu.profiles.ProfileEditActivity"
    android:background="@color/white">

    <include
        layout="@layout/component_toolbar"
        android:id="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf    ="parent"
        app:layout_constraintEnd_toEndOf    ="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_height="0dp"
        android:layout_width ="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_edit_profile"
        app:layout_constraintTop_toBottomOf   ="@id/toolbar">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width ="match_parent"
            android:orientation  ="vertical"
            android:gravity      ="center">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="wrap_content"
                android:layout_width ="match_parent">

                <ImageView
                    android:id="@+id/iv_banner"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:background="@color/colorPrimaryGreen_dynamic"
                    android:scaleType="center"
                    android:src="@drawable/bg_pola"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="ContentDescription" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_profile_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/medium_margin_twenty_four"
                    android:layout_marginVertical="@dimen/small_margin_12"
                    app:cardBackgroundColor="@color/white_dynamic"
                    app:cardCornerRadius="@dimen/_24sdp"
                    app:cardElevation="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/small_margin_16"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_banner"
                    app:layout_constraintStart_toStartOf  ="@+id/iv_banner"
                    app:layout_constraintTop_toBottomOf   ="@+id/iv_banner">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/small_margin_16">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_72sdp"
                            android:layout_height="@dimen/_72sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:elevation="0dp"
                            app:cardBackgroundColor="@color/white_dynamic"
                            app:cardCornerRadius="@dimen/_100sdp">

                            <ImageView
                                android:id="@+id/img_profile"
                                android:layout_width="@dimen/_72sdp"
                                android:layout_height="@dimen/_72sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_profile_placeholder"
                                tools:ignore="ContentDescription" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/small_margin_12"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_name"
                                android:textSize="@dimen/text_size_xlarge"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/_4sdp" />

                            <TextView
                                android:id="@+id/tv_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_email"
                                android:textSize="@dimen/text_size_medium"
                                android:alpha="0.9" />

                            <LinearLayout
                                android:layout_width ="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation  ="horizontal"
                                android:layout_marginTop="@dimen/_4sdp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_change_photo"
                                    android:layout_width ="wrap_content"
                                    android:layout_height="@dimen/_36sdp"

                                    android:layout_weight   ="1"
                                    android:layout_marginEnd="@dimen/small_margin_8"

                                    android:text       ="@string/profile_edit_photo"
                                    android:textAllCaps="false"
                                    android:textColor  ="@color/white_dynamic"
                                    android:textSize   ="@dimen/text_size_small"
                                    android:fontFamily ="@font/poppins_semibold"

                                    app:cornerRadius="@dimen/_16sdp"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_remove_photo"
                                    android:layout_width ="wrap_content"
                                    android:layout_height="@dimen/_36sdp"

                                    android:layout_weight     ="1"
                                    android:layout_marginStart="@dimen/small_margin_8"

                                    android:text       ="@string/profile_edit_remove_photo"
                                    android:textAllCaps="false"
                                    android:textColor  ="@color/white_dynamic"
                                    android:textSize   ="@dimen/text_size_small"
                                    android:fontFamily ="@font/poppins_semibold"

                                    app:cornerRadius="@dimen/_16sdp"/>
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Profile Items-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_profile_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="true"
                    app:layout_constraintTop_toBottomOf="@id/cv_profile_holder"/>

                <!-- Calendar Picker-->
                <LinearLayout
                    android:id="@+id/ll_calendar_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="@dimen/medium_margin_twenty_four"
                    android:layout_marginVertical  ="@dimen/small_margin_16"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/rv_profile_edit"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_calendar_icon"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:src="@drawable/calendernew"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ed_box_birthdate"
                        android:layout_height="wrap_content"
                        android:layout_width ="match_parent"
                        android:visibility   ="visible"

                        android:layout_marginStart="@dimen/medium_margin_twenty_four"

                        app:boxCornerRadiusBottomStart="@dimen/_12sdp"
                        app:boxCornerRadiusBottomEnd  ="@dimen/_12sdp"
                        app:boxCornerRadiusTopStart   ="@dimen/_12sdp"
                        app:boxCornerRadiusTopEnd     ="@dimen/_12sdp"

                        app:boxStrokeColor    ="@color/primary_color"

                        app:boxBackgroundColor="@color/white_dynamic"
                        app:hintTextColor     ="@color/black"
                        app:endIconMode       ="custom"
                        app:endIconDrawable   ="@drawable/calendernew">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ed_edit_birthdate"
                            android:layout_height="@dimen/_56sdp"
                            android:layout_width ="match_parent"
                            android:singleLine   ="true"
                            android:focusable    ="false"
                            android:textColor    ="@color/color_dark_gray"
                            android:hint="@string/profile_edit_b_day_item"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Radio Buttons-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/medium_margin_twenty_four"
                    android:layout_marginVertical="@dimen/small_margin_16"
                    app:layout_constraintTop_toBottomOf="@id/ll_calendar_frame">
                    <ImageView
                        android:id="@+id/iv_gender_icon"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:src="@drawable/ic_gender_man"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/medium_margin_twenty_four">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_edit_gender_item"/>
                        <RadioGroup
                            android:id="@+id/rg_gender"
                            android:layout_height="wrap_content"
                            android:layout_width ="match_parent">
                            <RadioButton
                                android:id="@+id/rb_female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_4sdp"

                                android:text="@string/profile_edit_gender_female"/>
                            <RadioButton
                                android:id="@+id/rb_male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_4sdp"
                                android:text="@string/profile_edit_gender_male"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Save Button -->
    <com.solusinegeri.merchant3.presentation.component.button.SmartButton
        android:id="@+id/btn_edit_profile"
        android:layout_width ="0dp"
        android:layout_height="@dimen/_56sdp"
        android:layout_margin="@dimen/_16sdp"
        android:text="@string/action_save"
        android:textAllCaps="false"
        android:textColor="@color/white_dynamic"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimaryGreen_dynamic"
        app:cornerRadius="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>