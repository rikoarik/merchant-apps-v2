<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginHorizontal="@dimen/medium_margin_twenty_four"
    android:layout_marginVertical="@dimen/_12sdp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_box"
        android:layout_height="wrap_content"
        android:layout_width ="match_parent"

        android:layout_marginStart="@dimen/medium_margin_twenty_four"

        app:boxCornerRadiusBottomStart="@dimen/_12sdp"
        app:boxCornerRadiusBottomEnd  ="@dimen/_12sdp"
        app:boxCornerRadiusTopStart   ="@dimen/_12sdp"
        app:boxCornerRadiusTopEnd     ="@dimen/_12sdp"

        app:boxBackgroundColor        ="@color/white_dynamic"
        app:hintTextColor             ="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_edit"
            android:layout_height="@dimen/_56sdp"
            android:layout_width ="match_parent"
            android:singleLine   ="true"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>