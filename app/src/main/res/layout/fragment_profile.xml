<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/medium_margin_twenty_four">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profil"
                    android:textColor="@color/text_primary_dynamic"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/small_margin_8" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kelola informasi dan pengaturan akun Anda"
                    android:textColor="@color/text_secondary_dynamic"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>

            <!-- Profile Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_margin_twenty_four"
                app:cardCornerRadius="@dimen/_16sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/colorPrimaryGreen_dynamic">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_12sdp"
                    android:gravity="center_vertical">

                    <!-- Profile Image -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_64sdp"
                        android:layout_height="@dimen/_64sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        app:cardCornerRadius="@dimen/_32sdp"
                        app:cardElevation="@dimen/_2sdp"
                        app:cardBackgroundColor="@color/white_dynamic">

                        <ImageView
                            android:id="@+id/ADD_IMAGE"
                            android:layout_width="@dimen/_64sdp"
                            android:layout_height="@dimen/_64sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_profile_placeholder"
                            tools:ignore="ContentDescription" />

                    </androidx.cardview.widget.CardView>

                    <!-- Profile Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User"
                            android:textColor="@color/white_dynamic"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/_4sdp" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="user@example.com"
                            android:textColor="@color/white_dynamic"
                            android:textSize="@dimen/text_size_medium"
                            android:alpha="0.9" />

                    </LinearLayout>

                    <!-- Edit Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit_profile"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_36sdp"
                        android:text="Edit"
                        android:visibility="gone"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/white_dynamic"
                        app:strokeColor="@color/white_dynamic"
                        app:cornerRadius="@dimen/_18sdp" />

<!--                    <com.google.android.material.button.MaterialButton-->
<!--                        android:id="@+id/btn_ganti_pin"-->
<!--                        style="@style/Widget.Material3.Button.OutlinedButton"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="@dimen/_36sdp"-->
<!--                        android:text="Edit"-->
<!--                        android:visibility="gone"-->
<!--                        android:textSize="@dimen/text_size_medium"-->
<!--                        android:textColor="@color/white_dynamic"-->
<!--                        app:strokeColor="@color/white_dynamic"-->
<!--                        app:cornerRadius="@dimen/_18sdp" />-->

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Menu Items -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_profile_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                android:fadeScrollbars="true" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="@dimen/_56sdp"
        android:layout_margin="@dimen/_16sdp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/white_dynamic"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimaryGreen_dynamic"
        app:cornerRadius="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>