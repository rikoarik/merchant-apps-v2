<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:padding="@dimen/medium_margin_twenty_four"
    tools:context=".presentation.ui.initial.InitialInputActivity">

    <LinearLayout
        android:id="@+id/ly_initial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Logo -->
        <ImageView
            android:layout_width="@dimen/logo_width_large"
            android:layout_height="@dimen/logo_height_large"
            android:layout_marginTop="@dimen/medium_margin_twenty_four"
            android:layout_marginBottom="@dimen/extra_large_margin_100"
            android:src="@drawable/ic_closepay_merchant"
            tools:ignore="ContentDescription" />

        <!-- Title -->
        <TextView
            android:id="@+id/txt_initial_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin_twenty_four"
            android:layout_marginEnd="@dimen/medium_margin_twenty_four"
            android:text="@string/label_pilih_instansi"
            android:textColor="@color/colorPrimaryGreen"
            android:textSize="@dimen/text_size_xxlarge"
            android:textStyle="bold" />

        <!-- Info Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin_twenty_four"
            android:layout_marginEnd="@dimen/medium_margin_twenty_four"
            android:layout_marginTop="@dimen/small_margin_8"
            android:text="@string/label_info_check_Inital"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_secondary" />

        <!-- Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin_twenty_four"
            android:orientation="vertical">

            <!-- TextInputLayout -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_input_instansi"
                app:hintTextColor="@color/black"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/input_stroke_color"
                app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_initial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="normal" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Smart Button -->
            <com.solusinegeri.merchant3.presentation.component.button.SmartButton
                android:id="@+id/btnCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin_12"
                android:text="@string/label_check"
                android:textSize="16sp"
                android:textStyle="bold" />


            <!-- Result Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_initial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/small_margin_12"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/small_margin_8"
                android:background="@android:drawable/dialog_holo_dark_frame"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/small_margin_12"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_company_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/small_margin_12"
                        android:background="@drawable/bg_rectangle_outline_grey"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_closepay_logo"
                        android:contentDescription="Company Logo"
                        android:visibility="gone" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/small_margin_12"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_instansi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_initial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_spacing_small"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/label_powered_by"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="97dp"
                android:layout_height="57dp"
                android:layout_marginEnd="@dimen/small_margin_8"
                android:src="@drawable/ic_closepay_logo"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </LinearLayout>

    <!-- Chucker Debug Button (only visible in debug builds) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChucker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/medium_margin_20"
        android:src="@android:drawable/ic_menu_info_details"
        android:contentDescription="@string/chucker_debug"
        android:visibility="gone"
        app:backgroundTint="@color/colorPrimaryGreen"
        app:tint="@color/white" />

</LinearLayout>
