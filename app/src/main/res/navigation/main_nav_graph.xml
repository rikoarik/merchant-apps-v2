<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- HOME -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.solusinegeri.merchant3.presentation.ui.main.fragments.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="false"
            app:popUpToSaveState="false"
            app:launchSingleTop="true"
            app:restoreState="false" />

        <action
            android:id="@+id/action_home_to_news"
            app:destination="@id/newsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="false"
            app:popUpToSaveState="false"
            app:launchSingleTop="true"
            app:restoreState="false" />

        <action
            android:id="@+id/action_home_to_analytics"
            app:destination="@id/analyticsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="false"
            app:popUpToSaveState="false"
            app:launchSingleTop="true"
            app:restoreState="false" />
    </fragment>

    <!-- PROFILE -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.solusinegeri.merchant3.presentation.ui.main.fragments.ProfileFragment"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profile_to_home"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="false"
            app:popUpToSaveState="false"
            app:launchSingleTop="true"
            app:restoreState="false" />

        <action
            android:id="@+id/action_profile_to_news"
            app:destination="@id/newsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="false"
            app:popUpToSaveState="false"
            app:launchSingleTop="true"
            app:restoreState="false" />

        <action
            android:id="@+id/action_profile_to_analytics"
            app:destination="@id/analyticsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="false"
            app:popUpToSaveState="false"
            app:launchSingleTop="true"
            app:restoreState="false" />
    </fragment>

    <!-- NEWS -->
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.solusinegeri.merchant3.presentation.ui.main.fragments.NewsFragment">

        <action
            android:id="@+id/action_news_to_home"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="false"
            app:popUpToSaveState="false"
            app:launchSingleTop="true"
            app:restoreState="false" />

        <action
            android:id="@+id/action_news_to_analytics"
            app:destination="@id/analyticsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="false"
            app:popUpToSaveState="false"
            app:launchSingleTop="true"
            app:restoreState="false" />

        <action
            android:id="@+id/action_news_to_profile"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="false"
            app:popUpToSaveState="false"
            app:launchSingleTop="true"
            app:restoreState="false" />
    </fragment>

    <!-- ANALYTICS -->
    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.solusinegeri.merchant3.presentation.ui.main.fragments.AnalyticsFragment"
        >

        <action
            android:id="@+id/action_analytics_to_home"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="false"
            app:popUpToSaveState="false"
            app:launchSingleTop="true"
            app:restoreState="false" />

        <action
            android:id="@+id/action_analytics_to_news"
            app:destination="@id/newsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="false"
            app:popUpToSaveState="false"
            app:launchSingleTop="true"
            app:restoreState="false" />

        <action
            android:id="@+id/action_analytics_to_profile"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="false"
            app:popUpToSaveState="false"
            app:launchSingleTop="true"
            app:restoreState="false" />
    </fragment>

</navigation>
