<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.any" />


    <application
        android:name=".MerchantApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SolusiNegeriMerchant"
        android:usesCleartextTraffic="false">
        <activity
            android:name=".presentation.ui.menu.menupin.ForgotPinActivity"
            android:exported="false"
            android:theme="@style/Theme.SolusiNegeriMerchant" />
        <activity
            android:name=".presentation.ui.menu.menupin.ChangePinActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.menu.menupin.PinMenuActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.menu.profiles.ProfileEditActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.menu.profiles.PasswordEditActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.menu.analytics.AnalyticsActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.menu.analytics.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.SolusiNegeriMerchant" />
        <activity
            android:name=".presentation.ui.menu.news.NewsDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.SolusiNegeriMerchant" /> <!-- Splash Activity - Main Launcher -->
        <activity
            android:name=".presentation.ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SolusiNegeriMerchant.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Initial Input Activity -->
        <activity
            android:name=".presentation.ui.initial.InitialInputActivity"
            android:exported="false"
            android:theme="@style/Theme.SolusiNegeriMerchant" /> <!-- Main Activity -->
        <activity
            android:name=".presentation.ui.main.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.SolusiNegeriMerchant" />
        <activity
            android:name=".presentation.ui.auth.LoginActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>